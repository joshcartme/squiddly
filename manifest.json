{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.0.1",
  "name": "squiddly",
  "description": "Disable the github merge button based on checks or a label.",
  "icons": {
    "48": "images/squiddly_48.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/*"
      ],
      "js": [
        "content/scripts.ts"
      ]
    }
  ],
  "action": {
    "default_popup": "./action/index.html",
    "default_title": "Squiddly",
    "default_icon": {
      "48": "images/squiddly_48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "squiddly@jo.shcart.me",
      "strict_min_version": "58.0"
    }
  },
  "author": "Joshua Cartmell"
}